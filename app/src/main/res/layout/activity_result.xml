<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vladhq.mynewapp.ResultActivity">

    <TextView
        android:id="@+id/url_text"
        android:layout_width="365dp"
        android:layout_height="60dp"
        android:autoSizeMaxTextSize="32dp"
        android:autoSizeMinTextSize="12dp"
        android:autoSizePresetSizes="16"
        android:focusable="auto"
        android:gravity="center"
        android:linksClickable="true"
        android:longClickable="true"
        android:textIsSelectable="true"
        android:text=""
        android:onClick="clickLink"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintVertical_bias="0.596" />

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:drawable/stat_notify_error"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/url_text"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:text="Copy Link"
        android:onClick="copyLink"
        tools:layout_editor_absoluteX="119dp"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/url_text" />
</android.support.constraint.ConstraintLayout>
